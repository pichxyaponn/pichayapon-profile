---
import "@fontsource/sarabun";
import Image from "astro/components/Image.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={title} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Pichayapon C. | Portfolio RSS Feed"
      href="/rss.xml"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-zinc-50 text-zinc-800">
    <div class="fixed bottom-4 right-4 z-10 transition-all">
      <a
        href="https://webring.wonderful.software#pichayapon.com"
        title="วงแหวนเว็บ"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Image
          src="https://webring.wonderful.software/webring.black.svg"
          width="32"
          height="32"
          alt="วงแหวนเว็บ"
          loading={"eager"}
        />
      </a>
    </div>
    <header
      class="sticky top-0 z-50 py-3 bg-zinc-900/5 backdrop-blur-lg border-b border-zinc-200/50"
    >
      <nav class="container mx-auto max-w-4xl fi justify-between px-4">
        <a href="/" class="font-medium link"> pichxyaponn </a>
        <div class="fi gap-6 text-sm text-bold">
          <a href="#about" class="link">About</a>
          <a href="#projects" class="link">Projects</a>
          <a href="#me" class="link">Me</a>
        </div>
      </nav>
    </header>
    <main>
      <slot transition:animate="fade" />
    </main>
  </body>
</html>
