---
import "@fontsource/sarabun";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={title} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-zinc-50 text-zinc-800">
    <header class="sticky top-0 z-50 py-3 backdrop-blur-lg border-b border-zinc-200/50">
      <nav class="container mx-auto max-w-4xl fi justify-between px-4">
        <a href="/" class="font-medium link"> pichxyaponn </a>
        <div class="fi gap-6 text-sm text-bold">
          <a href="#introduction" class="link">About</a>
          <a href="#information" class="link">Projects</a>
          <a href="#story" class="link">Story</a>
        </div>
      </nav>
    </header>
    <slot transition:animate="fade" />
  </body>
</html>

<style is:global>
  @keyframes bump {
    0% {
      opacity: 0;
      transform: scale(1) translateX(200px);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.1);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateX(0);
    }
  }
</style>
